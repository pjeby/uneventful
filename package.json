{
    "name": "uneventful",
    "version": "0.0.10",
    "description": "Declarative, event-driven reactivity: signals, streams, structured concurrency, and easy resource cleanup",
    "keywords": [
        "signals",
        "reactive streams",
        "streams",
        "cancellation",
        "abortSignals",
        "cancellable promises",
        "FRP"
    ],
    "repository": "https://github.com/pjeby/uneventful.git",
    "homepage": "https://uneventful.js.org",
    "license": "ISC",
    "type": "module",
    "types": "./dist/mod.d.ts",
    "files": [
        "./dist/*"
    ],
    "exports": {
        ".": {
            "import": {
                "types": "./dist/mod.d.ts",
                "default": "./dist/mod.mjs"
            }
        },
        "./ext": {
            "import": {
                "types": "./dist/ext.d.ts",
                "default": "./dist/ext.mjs"
            }
        },
        "./shared": {
            "import": {
                "types": "./dist/shared.d.ts",
                "default": "./dist/shared.mjs"
            }
        },
        "./signals": {
            "import": {
                "types": "./dist/signals.d.ts",
                "default": "./dist/signals.mjs"
            }
        },
        "./utils": {
            "import": {
                "types": "./dist/utils.d.ts",
                "default": "./dist/utils.mjs"
            }
        }
    },
    "scripts": {
        "coverage": "c8 -r lcov mocha -n loader=ts-node/esm",
        "docs": "typedoc",
        "watch": "mocha -r tsx --watch",
        "watch-docs": "typedoc --watch",
        "test": "mocha -r tsx && pkgroll",
        "prepare": "pkgroll --sourcemap --clean-dist"
    },
    "mocha": {
        "spec": "specs/*.spec.ts",
        "watch-files": [
            "*.ts",
            "src/*.ts",
            "specs/*.ts",
            "README.md"
        ]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "packageManager": "pnpm@7.33.6",
    "devDependencies": {
        "@types/chai": "^4.3.10",
        "@types/chai-as-promised": "^7.1.8",
        "@types/mocha": "^10.0.4",
        "@types/node": "^16",
        "@types/sinon": "^17.0.1",
        "@types/sinon-chai": "^3.2.12",
        "c8": "^10",
        "chai": "^4.3.10",
        "chai-as-promised": "^7.1.1",
        "mocha": "^10.2.0",
        "monkey-around": "^3",
        "pkgroll": "^2.1.1",
        "sinon": "^17.0.1",
        "sinon-chai": "^3.7.0",
        "ts-expect": "^1.3.0",
        "ts-node": "^10.9.1",
        "tsx": "^4.6.1",
        "typedoc": "0.28.1",
        "typescript": "^5.4.5"
    }
}
